


<img src="/assets/img/burger.jpg" width="200" height="200">
<h2>Eat-Da-Burger</h2>

<div class="container">
  <div class="row">
    <div class="col-sm-6">
<div class="row">
  <div class="col-sm-6">
      <ul>
        {{#each burger}}
        
          {{#unless this.devoured}}     
            {{this.burger_name }} 
              
          <form>
            <button class="change-devoured" type="submit" data-id={{this.id}}>Devoured</button>
          </form>       
          {{/unless}}
       
        {{/each}}
      </ul>
      </div>
</div>
    </div>

    <div class="col-sm-6">
      <ul>
        {{#each burger}}
          {{#if this.devoured}}
          <p>
            {{this.burger_name }}
          </p>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>


<form class="create-form">

  <div class="form-group">
    <input type="text" id="burg" name="name">
  </div>


  <button type="submit">Submit</button>
</form>

<p>Enter a burger you want to eat Click the "Submit" button</p>